{
  "name": "tree-sitter-smithy",
  "version": "0.1.0",
  "description": "Tree-Sitter grammar for Smithy",
  "main": "bindings/node",
  "keywords": [
    "parser",
    "lexer",
    "idl"
  ],
  "author": "Simon Johnston <johnstonskj@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnstonskj/tree-sitter-smithy"
  },
  "dependencies": {
    "nan": "^2.17.0"
  },
  "devDependencies": {
    "node-gyp": "^9.3.1",
    "tree-sitter-cli": "^0.20.8"
  },
  "scripts": {
    "install": "make install",
    "build": "make parser_dylib",
    "build-bindings": "make bindings",
    "test": "make test_grammar",
    "clean": "make clean"
  },
  "main": "bindings/node",
  "directories": {
    "test": "test"
  },
  "tree-sitter": [
    {
      "scope": "source.smithy",
      "file-types": [
        "smithy"
      ],
      "folds": [
        "queries/folds.scm",
        "node_modules/tree-sitter-smithy/queries/folds.scm"
      ],
      "highlights": [
        "queries/highlights.scm",
        "node_modules/tree-sitter-smithy/queries/highlights.scm"
      ],
      "indent": [
        "queries/highlights.scm",
        "node_modules/tree-sitter-smithy/queries/indent.scm"
      ],
      "injections": [
        "queries/injections.scm",
        "node_modules/tree-sitter-smithy/queries/injections.scm"
      ],
      "lint": [
        "queries/lint.scm",
        "node_modules/tree-sitter-smithy/queries/lint.scm"
      ],
      "tags": [
        "queries/tags.scm",
        "node_modules/tree-sitter-smithy/queries/tags.scm"
      ],
      "injection-regex": "^smithy$"
    }
  ]
}
